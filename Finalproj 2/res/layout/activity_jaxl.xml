<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#304FF7A9" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#80000000"
        android:text="Jaxl Noval"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <TextView
        android:paddingBottom="30dp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Little description about himself"
        android:layout_gravity="center"
         android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/jaxl" />

        <TextView
            android:id="@+id/textView3"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#000000"
            android:background="#10000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description about him/her. Blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah " />

    </LinearLayout>

     	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:paddingTop="30dp"
	        android:paddingLeft="20dp" >

         <EditText
              android:id="@+id/editText1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ems="10"
              android:textColor="#000000"
              android:background="#FFFFFF"
              android:textSize="20dp"
              android:paddingBottom="19dp"
              android:hint="Post-it"
              android:paddingTop="2dp"
              android:paddingLeft="10dp"
              android:inputType="textMultiLine" >
          </EditText>

   		<Button
	        android:id="@+id/send"
	        android:paddingBottom="15dp"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:background="@drawable/plane" />
   		</LinearLayout>

     	<LinearLayout
     	    android:layout_width="match_parent"
     	    android:layout_height="wrap_content"
     	    android:paddingLeft="90dp"
     	    android:orientation="horizontal" >

     		<Button
     		    android:id="@+id/button2"
     		    android:layout_width="20dp"
     		    android:layout_height="20dp"
     		    android:background="@drawable/camera" />

     		<Button
     		    android:id="@+id/button1"
     		    android:layout_width="20dp"
     		    android:layout_height="20dp"
     		    android:background="@drawable/color" />
   		
     	    <CheckBox
				android:id="@+id/checkBox1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Ask Anonymously"
     	  		android:paddingTop="5dp" />
     	    
     	</LinearLayout>

     	<RelativeLayout
     	    android:layout_width="match_parent"
     	    android:layout_height="wrap_content" >
     	    
     	   <Button
		        android:id="@+id/seemore"
		        android:layout_width="0dp"
		        android:layout_height="50dp"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentRight="true"
		        android:layout_marginTop="40dp"
		        android:background="@drawable/answered"/>
     	    
     	</RelativeLayout>

</LinearLayout>